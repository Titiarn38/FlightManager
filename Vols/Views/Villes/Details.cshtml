@model Vols.Models.Ville

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="display-4">Détails de la Ville</h1>

    <div>
        <h4>Ville</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nom)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nom)
            </dd>
        </dl>
    </div>

    <div>
        <h4>Vols liés à cette ville</h4>
        <hr />
        @if (Model.Vols != null && Model.Vols.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Numéro de vol</th>
                            <th scope="col">Ville de départ</th>
                            <th scope="col">Ville d'arrivée</th>
                            <th scope="col">Heure de départ</th>
                            <th scope="col">Heure d'arrivée</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vol in Model.Vols)
                        {
                            <tr>
                                <td>@vol.Reference</td>
                                <td>@vol.VilleDepart</td>
                                <td>@vol.VilleArrivee</td>
                                <td>@vol.DateDepart</td>
                                <td>@vol.DateArrivee</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>Aucun vol trouvé pour cette ville.</p>
        }
    </div>

    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.IdVille">Modifier</a>
        <a class="btn btn-secondary" asp-action="Index">Retour à la liste</a>
    </div>
</div>
