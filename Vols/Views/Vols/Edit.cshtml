@model Vols.Models.Vol

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1 class="display-4">Édition du Vol</h1>

    <h4>Vol</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Reference" class="control-label">Référence</label>
                    <input asp-for="Reference" class="form-control" />
                    <span asp-validation-for="Reference" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VilleDepart" class="control-label">Ville de Départ</label>
                    <input asp-for="VilleDepart" class="form-control" />
                    <span asp-validation-for="VilleDepart" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VilleArrivee" class="control-label">Ville d'Arrivée</label>
                    <input asp-for="VilleArrivee" class="form-control" />
                    <span asp-validation-for="VilleArrivee" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateDepart" class="control-label">Date de Départ</label>
                    <input asp-for="DateDepart" class="form-control" />
                    <span asp-validation-for="DateDepart" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateArrivee" class="control-label">Date d'Arrivée</label>
                    <input asp-for="DateArrivee" class="form-control" />
                    <span asp-validation-for="DateArrivee" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                    <a class="btn btn-secondary ml-2" asp-action="Index">Retour à la liste</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
