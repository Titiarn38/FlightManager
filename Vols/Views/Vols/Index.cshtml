@model IEnumerable<Vols.Models.Vol>

@{
    ViewData["Title"] = "Index";
}

<style>
    .btn-group > .btn {
        margin-right: 10px;
    }
</style>

<div class="container">
    <h1 class="display-4">Liste des Vols</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Ajouter un vol</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Référence</th>
                    <th scope="col">Ville de Départ</th>
                    <th scope="col">Ville d'Arrivée</th>
                    <th scope="col">Date de Départ</th>
                    <th scope="col">Date d'Arrivée</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Reference</td>
                        <td>@item.VilleDepart</td>
                        <td>@item.VilleArrivee</td>
                        <td>@item.DateDepart</td>
                        <td>@item.DateArrivee</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdVol">Détails</a>
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdVol">Modifier</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdVol">Supprimer</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
