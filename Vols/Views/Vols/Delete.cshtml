@model Vols.Models.Vol

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1 class="display-4">Supprimer le Vol</h1>

    <h3>Êtes-vous sûr de vouloir supprimer ceci ?</h3>
    <div>
        <h4>Vol</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdVol)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdVol)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Reference)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Reference)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VilleDepart)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VilleDepart)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VilleArrivee)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VilleArrivee)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateDepart)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateDepart)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateArrivee)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateArrivee)
            </dd>
        </dl>

        <form asp-action="Delete">
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Supprimer</button> |
                <a class="btn btn-secondary" asp-action="Index">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>
